package com.bridgtit.objectorientedprograms;

import java.io.BufferedReader;
import java.util.Scanner;

public class Json 
{
public static void main(String[] args)
{
	
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter the wheet name:");
	String name=sc.nextLine();
	System.out.println("Enter the wheet cost per kg:");
	double cost=sc.nextDouble();
	
	System.out.println("Enter the wheet weight:");
	double weight=sc.nextDouble();
	System.out.println("Enter the pulses name:");
	String name1=sc.nextLine();
	System.out.println("Enter the pulses cost per kg:");
	double cost1=sc.nextDouble();
	
	System.out.println("Enter the pulses weight:");
	double weight1=sc.nextDouble();
	System.out.println("Enter the rice name:");
	String name2=sc.nextLine();
	System.out.println("Enter the rice cost per kg:");
	double cost2=sc.nextDouble();
	System.out.println("Enter the rice weight:");
	double weight2=sc.nextDouble();
	
	
	JSONObject root=new JSONObject();
	root.put("name",name);
	root.put("name1",name);
	
	root.put("name2",name);
	
	JSONObject obj=new JSONObject();
	obj.put("cost",cost);
	obj.put("weight",weight);
	obj.put("cost1",cost1);
	obj.put("weight1",weight1);
	obj.put("cost2",cost2);
	obj.put("weight2",weight2);
	
	JSONArray arr=new JSONArray();
	arr.add(obj);
	root.put("arr",arr);
	
	System.out.println(root.toJSONString());
	String result = "";
	try {
        BufferedReader br = new BufferedReader(new FileReader(/home/bridgeit/Desktop/Json.txt));
        StringBuilder sb = new StringBuilder();
        String line = br.readLine();
        while (line != null) {
            sb.append(line);
            line = br.readLine();
        }
        result = sb.toString();
    } catch(Exception e) {
        e.printStackTrace();
    }
    return result;
}

	
	
	
	
	
}
}
