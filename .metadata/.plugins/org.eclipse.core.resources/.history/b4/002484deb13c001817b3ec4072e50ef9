package com.bridgeit.objectorientedprograms;

import java.io.File;
import java.io.FileInputStream;
import java.io.Serializable;
import java.util.ArrayList;

public class ObjectMapper  implements  Serializable
{

	public Person readValue(File, Class<Person> class1) {
		ObjectMapper mapper = new ObjectMapper();
		Person person = new Person();

		//Object to JSON in file
		mapper.writeValue(new File("c:\\user.json"), person);

		//Object to JSON in String
		String jsonInString = mapper.writeValueAsString(person);
		return null;
	}

	public void writeValue(File file, ArrayList<Person> arrayList) {
		ObjectMapper mapper = new ObjectMapper();
		String jsonInString = "{'name' : 'mkyong'}";

		//JSON from file to Object
		Person person = mapper.readValue(new File("c:\\user.json"), Person.class);

		//JSON from String to Object
		Person person1 = mapper.readValue(jsonInString, Person.class);

		
	}

}
