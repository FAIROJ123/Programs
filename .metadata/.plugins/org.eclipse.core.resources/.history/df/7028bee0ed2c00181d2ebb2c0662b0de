public class UnorderedList
{
	public static void main(String[] args)
	{
		ArrayList<String> list= new ArrayList<String>();
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the text file :");
	    String st = sc.nextLine();
	    String[] words = st.split(" ");
	    int count=words.length;
	    System.out.println("the total number of words are : "+count);
	    list.add(st);
	    System.out.println("Original linked list:" + list);
	    System.out.println("enter a word to search in a array list :");
	    String s = sc.next();
	    /*  if(st.contains(s))
	    {
	      System.out.println(s+ "is here!");
	      list.remove(s);
		     
	    }
	      
	    else
	    {
	     System.out.println("search can't find!");
	     list.add(s);
	     
	    }
	      
	      System.out.println("Original linked list:" + list);
	      
	      }*/
	    Iterator itr = list.iterator();
        while (itr.hasNext())
        {
            
            if(st.contains(s))
                itr.remove();
        }
 
        System.out.println("Modified ArrayList : " + list);
	    
	}    
     
}