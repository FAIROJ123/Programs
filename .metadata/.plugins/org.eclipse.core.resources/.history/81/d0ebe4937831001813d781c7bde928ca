package com.bridgtit.objectorientedprograms;

import java.io.BufferedReader;
import java.io.FileReader;
import java.util.Scanner;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;


public class Json 
{


public static void main(String[] args)
{
	
	
	Scanner sc=new Scanner(System.in);
	JSONParser parser = new JSONParser();
	 try {
		  
           Object obj = parser.parse(new FileReader("/home/bridgeit/Desktop/first.json"));
           JSONObject jsonObject = (JSONObject) obj;
           String name = (String) jsonObject.get("Name");
           Integer cost = (Integer) jsonObject.get("cost");
           Integer weight=(Integer)jsonObject.get("cost");
           JSONArray list = (JSONArray) jsonObject.get(" list");
           System.out.println("Name: " + name);
           System.out.println("Cost: " + cost);
           System.out.println("weught: " + cost);
           System.out.println("\n List:");
         
	 
	 } catch (Exception e) {
         e.printStackTrace();
     }

	 }

	

}
